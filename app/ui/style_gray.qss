QScrollArea#scrollCatalog::viewport,
QWidget#cardsContainer {
    background-color: #2E3B3A; /* üü© */
    border: none;
}

/* === 5) –ö–ê–†–¢–û–ß–ö–ò –ö–ù–ò–ì ================================== */
QFrame[card="true"] {
    background: #3F4D4B;       /* üü´ */
    border: 1px solid #5B615E; /* ü©∂ */
    border-radius: 14px;
}

/* –¢–µ–∫—Å—Ç –≤–Ω—É—Ç—Ä–∏ –∫–∞—Ä—Ç–æ—á–µ–∫ */
QFrame[card="true"] QLabel { color: #EAE7DC; }
QFrame[card="true"] QLabel#lblAuthor,
QFrame[card="true"] QLabel#lblTags {
    color: #C8CBC8;
    font-size: 12px;
    font-weight: 500;
}

/* –ö–Ω–æ–ø–∫–∞ ¬´–ü–æ–¥—Ä–æ–±–Ω–µ–µ¬ª –≤ –∫–∞—Ä—Ç–æ—á–∫–µ */
QFrame[card="true"] QPushButton#btnOpen {
    background: transparent;
    color: #D8E0D8;
    border: 1px solid #222322;
    border-radius: 6px;
    padding: 2px 8px;
    min-height: 20px;
    font-size: 12px;
    font-weight: 500;
}
QFrame[card="true"] QPushButton#btnOpen:hover {
    background: rgba(163, 217, 165, 0.12);
    color: #EAE7DC;
}
QFrame[card="true"] QPushButton#btnOpen:pressed {
    background: #222322;
    border-color: #3A3E3D;
    color: #EAE7DC;
}

/* === 6) –ö–ù–û–ü–ö–ò / –¢–£–õ–ë–ê–†–´ =============================== */
QToolBar {
    background: transparent;
    border: none;
    spacing: 4px;
    padding: 2px;
}

/* –ò–∫–æ–Ω–∫–∏/—Ç—É–ª–∫–Ω–æ–ø–∫–∏ (–≤ —Ç.—á. ¬´–∏–∑–±—Ä–∞–Ω–Ω–æ–µ¬ª) */
