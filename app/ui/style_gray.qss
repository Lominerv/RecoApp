    background: transparent;
    color: #EAE7DC;
    border: none;
    border-radius: 8px;
    padding: 4px 6px;
}
QToolButton:hover { background: rgba(163, 217, 165, 0.18); }
QToolButton:pressed,
QToolButton:checked {
    background: rgba(163, 217, 165, 0.30);
    border: 1px solid #A3D9A5;
}

/* –ë–∞–∑–æ–≤—ã–µ –∑–µ–ª—ë–Ω—ã–µ –∫–Ω–æ–ø–∫–∏ */
QPushButton {
    background: #A3D9A5;
    color: #2E3B3A;
    border: 1px solid #A3D9A5;
    border-radius: 8px;
    padding: 4px 8px;
    min-height: 24px;
    font-weight: 500;
}
QPushButton:hover { background: #89C990; border-color: #89C990; }
QPushButton:pressed { background: #5B615E; color: #EAE7DC; border-color: #5B615E; }
